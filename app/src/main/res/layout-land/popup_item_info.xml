<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context="net.afterday.compas.MainActivity">
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/left_guideline_layout"
        app:layout_constraintGuide_percent=".1"
        android:orientation="vertical"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/right_guideline_layout"
        app:layout_constraintGuide_percent=".9"
        android:orientation="vertical"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/top_guideline_layout"
        app:layout_constraintGuide_percent=".10"
        android:orientation="horizontal"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_guideline_layout"
        app:layout_constraintGuide_percent=".99"
        android:orientation="horizontal"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="false"
        android:background="@drawable/popup_background"
        app:layout_constraintBottom_toBottomOf="@id/bottom_guideline_layout"
        app:layout_constraintEnd_toEndOf="@id/right_guideline_layout"
        app:layout_constraintStart_toStartOf="@id/left_guideline_layout"
        app:layout_constraintTop_toTopOf="@id/top_guideline_layout"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/right_guideline_close"
        app:layout_constraintGuide_percent=".94"
        android:orientation="vertical"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/top_guideline_btn"
        app:layout_constraintGuide_percent=".07"
        android:orientation="horizontal"/>
    <ImageButton
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/popup_close"
        android:contentDescription="@string/close_info"
        tools:ignore="HardcodedText"
        app:layout_constraintEnd_toEndOf="@id/right_guideline_close"
        app:layout_constraintTop_toTopOf="@id/top_guideline_btn"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/left_guideline_itemimage"
        app:layout_constraintGuide_percent=".15"
        android:orientation="vertical"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/right_guideline_itemimage"
        app:layout_constraintGuide_percent=".33"
        android:orientation="vertical"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/top_guideline_itemimage"
        app:layout_constraintGuide_percent=".16"
        android:orientation="horizontal"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_guideline_itemimage"
        app:layout_constraintGuide_percent=".45"
        android:orientation="horizontal"/>
    <ImageView
        android:id="@+id/item_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/whiteTransparent"
        android:contentDescription="@string/item_image_info"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@id/bottom_guideline_itemimage"
        app:layout_constraintEnd_toEndOf="@id/right_guideline_itemimage"
        app:layout_constraintStart_toStartOf="@id/left_guideline_itemimage"
        app:layout_constraintTop_toTopOf="@id/top_guideline_itemimage"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/left_guideline_text"
        app:layout_constraintGuide_percent=".35"
        android:orientation="vertical"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/right_guideline_text"
        app:layout_constraintGuide_percent=".87"
        android:orientation="vertical"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_guideline_text"
        app:layout_constraintGuide_percent=".24"
        android:orientation="horizontal"/>
    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@id/bottom_guideline_text"
        app:layout_constraintEnd_toEndOf="@id/right_guideline_text"
        app:layout_constraintStart_toStartOf="@id/left_guideline_text"
        app:layout_constraintTop_toTopOf="@id/top_guideline_itemimage"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/left_guideline_effect"
        app:layout_constraintGuide_percent=".35"
        android:orientation="vertical"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/top_guideline_effect"
        app:layout_constraintGuide_percent=".25"
        android:orientation="horizontal"/>
    <LinearLayout
        android:id="@+id/effect_holder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@id/bottom_guideline_itemimage"
        app:layout_constraintEnd_toEndOf="@id/right_guideline_text"
        app:layout_constraintStart_toStartOf="@id/left_guideline_effect"
        app:layout_constraintTop_toTopOf="@id/top_guideline_effect"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/left_guideline_desc"
        app:layout_constraintGuide_percent=".15"
        android:orientation="vertical"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/top_guideline_desc"
        app:layout_constraintGuide_percent=".48"
        android:orientation="horizontal"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_guideline_desc"
        app:layout_constraintGuide_percent=".78"
        android:orientation="horizontal"/>
    <TextView
        android:id="@+id/description"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentBottom="false"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/bottom_guideline_desc"
        app:layout_constraintEnd_toEndOf="@id/right_guideline_text"
        app:layout_constraintStart_toStartOf="@id/left_guideline_desc"
        app:layout_constraintTop_toTopOf="@id/top_guideline_desc"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/right_guideline_drop"
        app:layout_constraintGuide_percent=".5"
        android:orientation="vertical"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/top_guideline_actionbtn"
        app:layout_constraintGuide_percent=".8"
        android:orientation="horizontal"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_guideline_actionbtn"
        app:layout_constraintGuide_percent=".9"
        android:orientation="horizontal"/>
    <Button
        android:id="@+id/drop"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/popup_button"
        android:text="@string/popup_drop"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="@id/bottom_guideline_actionbtn"
        app:layout_constraintEnd_toEndOf="@id/right_guideline_drop"
        app:layout_constraintStart_toStartOf="@id/left_guideline_desc"
        app:layout_constraintTop_toTopOf="@id/top_guideline_actionbtn"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/left_guideline_use"
        app:layout_constraintGuide_percent=".52"
        android:orientation="vertical"/>
    <Button
        android:id="@+id/use"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/popup_button"
        android:text="@string/popup_use"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="@id/bottom_guideline_actionbtn"
        app:layout_constraintEnd_toEndOf="@id/right_guideline_text"
        app:layout_constraintStart_toStartOf="@id/left_guideline_use"
        app:layout_constraintTop_toTopOf="@id/top_guideline_actionbtn"/>

</androidx.constraintlayout.widget.ConstraintLayout>