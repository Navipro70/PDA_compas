    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/left_guideline_confirm"
        app:layout_constraintGuide_percent=".1"
        android:orientation="vertical"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/right_guideline_confirm"
        app:layout_constraintGuide_percent=".45"
        android:orientation="vertical"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/top_guideline_btn"
        app:layout_constraintGuide_percent=".72"
        android:orientation="horizontal"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_guideline_btn"
        app:layout_constraintGuide_percent=".82"
        android:orientation="horizontal"/>
    <Button
        android:id="@+id/confirm_suicide"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/popup_button"
        android:text="@string/popup_yes"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="@id/bottom_guideline_btn"
        app:layout_constraintEnd_toEndOf="@id/right_guideline_confirm"
        app:layout_constraintStart_toStartOf="@id/left_guideline_confirm"
        app:layout_constraintTop_toTopOf="@id/top_guideline_btn"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/left_guideline_cancel"
        app:layout_constraintGuide_percent=".55"
        android:orientation="vertical"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/right_guideline_cancel"
        app:layout_constraintGuide_percent=".90"
        android:orientation="vertical"/>
    <Button
        android:id="@+id/cancel_suicide"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/popup_button"
        android:text="@string/popup_no"
        android:textColor="#ffffff"
        app:layout_heightPercent="10%"
        app:layout_marginLeftPercent="55%"
        app:layout_marginTopPercent="72%"
        app:layout_widthPercent="35%"
        app:layout_constraintBottom_toBottomOf="@id/bottom_guideline_btn"
        app:layout_constraintEnd_toEndOf="@id/right_guideline_cancel"
        app:layout_constraintStart_toStartOf="@id/left_guideline_cancel"
        app:layout_constraintTop_toTopOf="@id/top_guideline_btn"/>

</androidx.constraintlayout.widget.ConstraintLayout>