<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context="net.afterday.compas.MainActivity">
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/left_guideline_layout"
        app:layout_constraintGuide_percent=".05"
        android:orientation="vertical"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/right_guideline_layout"
        app:layout_constraintGuide_percent=".95"
        android:orientation="vertical"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/top_guideline_layout"
        app:layout_constraintGuide_percent=".10"
        android:orientation="horizontal"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_guideline_layout"
        app:layout_constraintGuide_percent=".95"
        android:orientation="horizontal"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:background="@drawable/popup_background"
        app:layout_constraintBottom_toBottomOf="@id/bottom_guideline_layout"
        app:layout_constraintEnd_toEndOf="@id/right_guideline_layout"
        app:layout_constraintStart_toStartOf="@id/left_guideline_layout"
        app:layout_constraintTop_toTopOf="@id/top_guideline_layout"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/right_guideline_close"
        app:layout_constraintGuide_percent=".97"
        android:orientation="vertical"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/top_guideline_close"
        app:layout_constraintGuide_percent=".07"
        android:orientation="horizontal"/>
    <ImageButton
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/popup_close"
        android:contentDescription="@string/close_info"
        app:layout_constraintEnd_toEndOf="@id/right_guideline_close"
        app:layout_constraintTop_toTopOf="@id/top_guideline_close" />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/left_guideline_text"
        app:layout_constraintGuide_percent=".23"
        android:orientation="vertical"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/right_guideline_text"
        app:layout_constraintGuide_percent=".78"
        android:orientation="vertical"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/top_guideline_text"
        app:layout_constraintGuide_percent=".16"
        android:orientation="horizontal"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_guideline_text"
        app:layout_constraintGuide_percent=".71"
        android:orientation="horizontal"/>
    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/popup_suicide"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@id/bottom_guideline_text"
        app:layout_constraintEnd_toEndOf="@id/right_guideline_text"
        app:layout_constraintStart_toStartOf="@id/left_guideline_text"
        app:layout_constraintTop_toTopOf="@id/top_guideline_text" />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/top_guideline_image"
        app:layout_constraintGuide_percent=".32"
        android:orientation="horizontal"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_guideline_image"
        app:layout_constraintGuide_percent=".72"
        android:orientation="horizontal"/>
    <ImageView
        android:id="@+id/suicide_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/tube_dead_misc"
        android:contentDescription="@string/suicide_image_info"
        app:layout_heightPercent="40%"
        app:layout_marginLeftPercent="23%"
        app:layout_marginTopPercent="32%"
        app:layout_widthPercent="55%"
        app:layout_constraintBottom_toBottomOf="@id/bottom_guideline_image"
        app:layout_constraintEnd_toEndOf="@id/right_guideline_text"
        app:layout_constraintStart_toStartOf="@id/left_guideline_text"
        app:layout_constraintTop_toTopOf="@id/top_guideline_image"/>

